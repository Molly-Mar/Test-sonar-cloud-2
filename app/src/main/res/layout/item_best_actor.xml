<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="210dp"
    android:layout_marginBottom="@dimen/margin_large"
    android:background="@color/colorRootBackground"
    >
<ImageView
    android:id="@+id/iv_actor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/photo2"
    android:scaleType="centerCrop"
    android:paddingEnd="@dimen/margin_medium"
    android:background="@color/colorRootBackground"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_border_black_24dp"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/margin_medium_3"
        android:layout_marginTop="@dimen/margin_medium"
        />
    <TextView
        android:id="@+id/tv_actor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leonardo DiCaprio"
        style="@style/WhiteTextRegular"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_xlarge"
        android:layout_marginStart="@dimen/margin_medium"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_thumb_up_black_24dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium"
        android:paddingEnd="@dimen/margin_small"/>
    <TextView
        android:id="@+id/tv_actor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You like 13 movies."
        android:textColor="@color/colorTextGray"
        android:textSize="@dimen/text_smaller"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:layout_marginStart="@dimen/margin_large"
        />


</FrameLayout>